<h1>Listing premios</h1>

<table>
  <tr>
    <th>Premio</th>
    <th>Pontos</th>
    <th>Ativo</th>
  </tr>

<% @premios.each do |premio| %>
  <tr>
    <td><%=h premio.premio %></td>
    <td><%=h premio.pontos %></td>
    <td><%=h premio.ativo %></td>
    <td><%= link_to 'Edit', edit_admin_premio_path(premio) %></td>
    <td><%= link_to 'Destroy', [:admin, premio], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<% form_for([:admin,@premio]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :premio %><br />
    <%= f.text_field :premio %>
  </p>
  <p>
    <%= f.label :pontos %><br />
    <%= f.text_field :pontos %>
  </p>
  <p>
    <%= f.label :ativo %><br />
    <%= f.text_field :ativo %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
<%= link_to 'New premio', new_admin_premio_path %>