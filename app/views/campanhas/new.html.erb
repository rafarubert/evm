<h1>New campanha</h1>

<% form_for(@campanha) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :titulo %><br />
    <%= f.text_field :titulo %>
  </p>
  <p>
    <%= f.label :data_inicio %><br />
    <%= f.date_select :data_inicio %>
  </p>
  <p>
    <%= f.label :data_fim %><br />
    <%= f.date_select :data_fim %>
  </p>
  <p>
    <%= f.label :data_troca %><br />
    <%= f.date_select :data_troca %>
  </p>
  <p>
    <%= f.label :regulamento %><br />
    <%= f.text_area :regulamento %>
  </p>
  <p>
    <%= f.label :lance_unico %><br />
    <%= f.text_field :lance_unico %>
  </p>
  <p>
    <%= f.label :quiz %><br />
    <%= f.text_field :quiz %>
  </p>
  <p>
    <%= f.label :temporaria %><br />
    <%= f.text_field :temporaria %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', campanhas_path %>